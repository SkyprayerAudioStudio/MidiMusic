<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_bottom_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_top_margin"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal">
	    <LinearLayout 
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"
	    	android:visibility="@string/hidden">
		    <TextView 
		        android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textSize="20sp"
	    		android:textStyle="bold"
	    		android:text="@string/drum_machine"/>
		    <include layout="@layout/usb_connection"/>
	    </LinearLayout>
		<LinearLayout 
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentRight="true">
		    <include layout="@layout/recording_pane"/>
	    	<ImageButton 
	    	    android:layout_marginLeft="10dp"
		        android:id="@+id/drum_grid_btn"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:scaleType="fitCenter"
		        android:visibility="@string/hidden"
		        android:src="@drawable/grid"
		        android:contentDescription="@string/descp_change_drum"/>
	    	<ImageButton 
	    	    android:layout_marginLeft="@dimen/drum_header_indent"
		        android:id="@+id/drum_edit_btn"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:scaleType="fitCenter"
		        android:src="@drawable/wrench"
		        android:contentDescription="@string/descp_edit_drum"/>
	    	<ImageButton 
		        android:id="@+id/drum_connect_btn"
		        android:layout_width="50dp"
		        android:layout_marginRight="30dp"
		        android:layout_height="50dp"
		        android:scaleType="fitCenter"
		        android:src="@drawable/connect"
		        android:contentDescription="@string/descp_connect_keyboard"/>
		    <ImageButton 
		        android:id="@+id/drum_key_btn"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:scaleType="fitCenter"
		        android:src="@drawable/keys"
		        android:contentDescription="@string/descp_intrument_screen"/>
		</LinearLayout>
	</RelativeLayout>
	<FrameLayout 
	    android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:background="@drawable/rounded_corners_bg_shape">
		<RelativeLayout 
		    android:id="@+id/drum_kit"
		    android:layout_width="fill_parent"
    		android:layout_height="fill_parent"
    		android:visibility="gone"
    		android:padding="5dp">
		    <RelativeLayout 
		        android:layout_width="fill_parent"
    			android:layout_height="wrap_content">
		        <FrameLayout 
		            android:id="@+id/drum_0"
		            android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:background="@drawable/circle_drum_shape_sml">
    				<ImageView
    				    android:visibility="gone"
    				    android:layout_width="25dp"
    					android:layout_height="25dp"
    					android:layout_gravity="center"
    					android:background="@drawable/wrench"
    					android:contentDescription="@null" />
		        </FrameLayout>
		        <FrameLayout 
		            android:id="@+id/drum_1"
		            android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_toRightOf="@id/drum_0"
    				android:background="@drawable/circle_drum_shape_lrg">
    				<ImageView
    				    android:visibility="gone"
    				    android:layout_width="25dp"
    					android:layout_height="25dp"
    					android:layout_gravity="center"
    					android:background="@drawable/wrench"
    					android:contentDescription="@null" />
		        </FrameLayout>
		         <FrameLayout 
		            android:id="@+id/drum_5"
		            android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_alignParentRight="true"
    				android:background="@drawable/circle_drum_shape_sml">
    				<ImageView
    				    android:visibility="gone"
    				    android:layout_width="25dp"
    					android:layout_height="25dp"
    					android:layout_gravity="center"
    					android:background="@drawable/wrench"
    					android:contentDescription="@null" />
		        </FrameLayout>
		        <FrameLayout 
		            android:id="@+id/drum_4"
		            android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_toLeftOf="@id/drum_5"
    				android:background="@drawable/circle_drum_shape_lrg">
    				<ImageView
    				    android:visibility="gone"
    				    android:layout_width="25dp"
    					android:layout_height="25dp"
    					android:layout_gravity="center"
    					android:background="@drawable/wrench"
    					android:contentDescription="@null" />
		        </FrameLayout>
		        <FrameLayout 
		            android:id="@+id/drum_2"
		            android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_toRightOf="@id/drum_1"
    				android:background="@drawable/circle_drum_shape_med">
    				<ImageView
    				    android:visibility="gone"
    				    android:layout_width="25dp"
    					android:layout_height="25dp"
    					android:layout_gravity="center"
    					android:background="@drawable/wrench"
    					android:contentDescription="@null" />
		        </FrameLayout>
		        <FrameLayout 
		            android:id="@+id/drum_3"
		            android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_toLeftOf="@id/drum_4"
    				android:background="@drawable/circle_drum_shape_med">
    				<ImageView
    				    android:visibility="gone"
    				    android:layout_width="25dp"
    					android:layout_height="25dp"
    					android:layout_gravity="center"
    					android:background="@drawable/wrench"
    					android:contentDescription="@null" />
    			</FrameLayout>
		    </RelativeLayout>
		    <RelativeLayout 
		        android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true">
		        <FrameLayout 
		            android:id="@+id/drum_12"
		            android:layout_centerHorizontal="true"
		            android:layout_alignParentBottom="true"
		            android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_marginLeft="20dp"
    				android:layout_marginRight="20dp"
    				android:background="@drawable/circle_drum_shape_bass">
    				<ImageView
    				    android:visibility="gone"
    				    android:layout_width="25dp"
    					android:layout_height="25dp"
    					android:layout_gravity="center"
    					android:background="@drawable/wrench"
    					android:contentDescription="@null" />
		        </FrameLayout>
		        <FrameLayout 
		            android:id="@+id/drum_11"
		            android:layout_alignParentBottom="true"
		            android:layout_centerHorizontal="true"
		            android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_toLeftOf="@id/drum_12"
    				android:background="@drawable/circle_drum_shape_thick">
    				<ImageView
    				    android:visibility="gone"
    				    android:layout_width="25dp"
    					android:layout_height="25dp"
    					android:layout_gravity="center"
    					android:background="@drawable/wrench"
    					android:contentDescription="@null" />
		        </FrameLayout>
		        <FrameLayout 
		            android:id="@+id/drum_13"
		            android:layout_alignParentBottom="true"
		            android:layout_centerHorizontal="true"
		            android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_toRightOf="@id/drum_12"
    				android:background="@drawable/circle_drum_shape_thick">
    				<ImageView
    				    android:visibility="gone"
    				    android:layout_width="25dp"
    					android:layout_height="25dp"
    					android:layout_gravity="center"
    					android:background="@drawable/wrench"
    					android:contentDescription="@null" />
		        </FrameLayout>
		        <FrameLayout 
		            android:id="@+id/drum_14"
		            android:layout_centerHorizontal="true"
		            android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_toRightOf="@id/drum_13"
    				android:layout_alignParentBottom="true"
    				android:background="@drawable/circle_drum_shape_med">
    				<ImageView
    				    android:visibility="gone"
    				    android:layout_width="25dp"
    					android:layout_height="25dp"
    					android:layout_gravity="center"
    					android:background="@drawable/wrench"
    					android:contentDescription="@null" />
		        </FrameLayout>
		        <FrameLayout 
		            android:id="@+id/drum_10"
		            android:layout_centerHorizontal="true"
		            android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:layout_toLeftOf="@id/drum_11"
    				android:layout_alignParentBottom="true"
    				android:background="@drawable/circle_drum_shape_med">
    				<ImageView
    				    android:visibility="gone"
    				    android:layout_width="25dp"
    					android:layout_height="25dp"
    					android:layout_gravity="center"
    					android:background="@drawable/wrench"
    					android:contentDescription="@null" />
		        </FrameLayout>
		    </RelativeLayout>
	        <LinearLayout 
	            android:layout_width="wrap_content"
   				android:layout_height="wrap_content"
   				android:orientation="horizontal"
   				android:layout_centerVertical="true"
	        	android:layout_centerHorizontal="true">
	            <FrameLayout 
		            android:id="@+id/drum_7"
		            android:layout_width="wrap_content"
	   				android:layout_height="wrap_content"
	   				android:background="@drawable/circle_drum_shape_thick">
    				<ImageView
    				    android:visibility="gone"
    				    android:layout_width="25dp"
    					android:layout_height="25dp"
    					android:layout_gravity="center"
    					android:background="@drawable/wrench"
    					android:contentDescription="@null" />
		        </FrameLayout>
		        <FrameLayout 
		            android:id="@+id/drum_8"
		            android:layout_width="wrap_content"
    				android:layout_height="wrap_content"
    				android:background="@drawable/circle_drum_shape_thick">
    				<ImageView
    				    android:visibility="gone"
    				    android:layout_width="25dp"
    					android:layout_height="25dp"
    					android:layout_gravity="center"
    					android:background="@drawable/wrench"
    					android:contentDescription="@null" />
		        </FrameLayout>
	        </LinearLayout>
		    <FrameLayout 
		        android:layout_marginLeft="5dp"
	            android:id="@+id/drum_6"
	            android:layout_width="wrap_content"
	            android:layout_centerVertical="true"
   				android:layout_height="wrap_content"
   				android:background="@drawable/circle_drum_shape_lrg">
		        <ImageView
		            android:visibility="gone"
   				    android:layout_width="25dp"
   					android:layout_height="25dp"
   					android:layout_gravity="center"
   					android:background="@drawable/wrench"
   					android:contentDescription="@null" />
		    </FrameLayout>
		    <FrameLayout 
        		android:layout_marginRight="5dp"
	            android:id="@+id/drum_9"
	            android:layout_width="wrap_content"
   				android:layout_height="wrap_content"
   				android:layout_centerVertical="true"
   				android:layout_alignParentRight="true"
   				android:background="@drawable/circle_drum_shape_lrg">
		        <ImageView
		            android:visibility="gone"
   				    android:layout_width="25dp"
   					android:layout_height="25dp"
   					android:layout_gravity="center"
   					android:background="@drawable/wrench"
   					android:contentDescription="@null" />
	        </FrameLayout>
		</RelativeLayout>
		<GridLayout
		    android:id="@+id/drum_gridview"
		    android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:alignmentMode="alignBounds"
			android:columnCount="5" 
			android:visibility="gone"
    		android:rowCount="5"
    		android:layout_gravity="center"
			android:orientation="horizontal">
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		    <include layout="@layout/drum_pad"/>
		</GridLayout>
		<Spinner
		    android:id="@+id/drum_invis_spinner"
		    android:visibility="invisible"
		    android:spinnerMode="dialog"
		    android:layout_width="200dp"
		    android:layout_height="60dp" />
	</FrameLayout>
</LinearLayout>
