<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_bottom_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_top_margin" android:orientation="vertical">
	<RelativeLayout android:layout_width="match_parent"
		android:layout_height="50dp" android:orientation="horizontal">
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:visibility="@string/hidden"
			android:orientation="vertical">
			<LinearLayout android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:id="@+id/instrument"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginRight="15dp" android:textSize="20sp"
					android:textStyle="bold" />
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textSize="15sp"
					android:text="@string/note" />
				<TextView android:id="@+id/note" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp" android:textSize="15sp"
					android:textStyle="bold" android:text="@string/dash" />
			</LinearLayout>
			<include layout="@layout/usb_connection" />
		</LinearLayout>
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentRight="true">
			<include layout="@layout/recording_pane" />
			<ImageButton android:layout_marginLeft="15dp"
				android:id="@+id/instrument_change_btn" android:layout_width="50dp"
				android:layout_height="50dp" android:scaleType="fitCenter"
				android:src="@drawable/grid2" android:contentDescription="@string/descp_change_instr" />
			<ImageButton android:id="@+id/sequence_btn"
				android:layout_width="50dp" android:layout_height="50dp"
				android:scaleType="fitCenter" android:visibility="@string/hidden"
				android:src="@drawable/wave" android:contentDescription="@string/descp_sequence_screen" />
			<ImageButton android:id="@+id/drum_btn"
				android:layout_width="50dp" android:layout_height="50dp"
				android:scaleType="fitCenter" android:src="@drawable/drum"
				android:contentDescription="@string/descp_drum_screen" />
			<ImageButton android:id="@+id/note_btn"
				android:layout_width="50dp" android:layout_height="50dp"
				android:scaleType="fitCenter" android:src="@drawable/notes"
				android:visibility="gone" android:contentDescription="@string/descp_chord_screen" />
			<ImageButton android:layout_marginRight="30dp"
				android:id="@+id/console_btn" android:layout_width="50dp"
				android:layout_height="50dp" android:scaleType="fitCenter"
				android:src="@drawable/console" android:contentDescription="@string/descp_console_screen" />
			<ImageButton android:id="@+id/close_btn"
				android:layout_width="50dp" android:layout_height="50dp"
				android:scaleType="fitCenter" android:src="@drawable/close"
				android:contentDescription="@string/descp_close" />
		</LinearLayout>
	</RelativeLayout>
	<FrameLayout android:id="@+id/instrument_fragment"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:background="@drawable/rounded_corners_bg_shape"
		android:padding="3dp" />
</LinearLayout>
