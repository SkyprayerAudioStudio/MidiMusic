<?xml version="1.0" encoding="utf-8"?>
<com.jfleischer.midimusic.views.UsbConnection xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/usb_connection_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="@string/hidden">

    <ImageView
        android:id="@+id/led"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/usb_connection"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="12sp" />
</com.jfleischer.midimusic.views.UsbConnection>
